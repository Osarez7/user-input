<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCounterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/counter_label"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
       />

    <TextView
        android:id="@+id/txtCounterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="0"
        android:textSize="24dp"
        android:layout_below="@id/txtCounterLabel" />
    <LinearLayout
        android:layout_below="@id/txtCounterValue"
        android:layout_width="match_parent"
        android:paddingHorizontal="12dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btn_count"
            android:layout_height="51dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tap"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_second_screen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Screen"
            android:textSize="22dp"
            />

    </LinearLayout>


</RelativeLayout>